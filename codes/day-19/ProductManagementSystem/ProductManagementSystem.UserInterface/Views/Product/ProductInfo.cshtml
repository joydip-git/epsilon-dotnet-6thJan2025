@{
    ViewData["Title"] = "Product Info";
}
@model ProductQueryViewModel

@if (Model != null)
{
    <table>
        <tr>
            <td>Id: &nbsp;</td>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <td>Name: &nbsp;</td>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <td>Description: &nbsp;</td>
            <td>
                <textarea readonly>
                    @Model.Description
                                    </textarea>
            </td>
        </tr>
        <tr>
            <td>Price: &nbsp;</td>
            <td>@Model.Price</td>
        </tr>
    </table>
    <br/>
    <a asp-action="GetAll">Back To Products</a>
}
else
{
    <span>No record found...</span>
}
